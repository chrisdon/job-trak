<resources>



    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/latvian_red</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/latvian_red_shade1</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/light_green</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <style name="jobs_edit" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="job_header_large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="job_header_medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="job_header_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
